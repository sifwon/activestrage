    <%= link_to "記事一覧へ戻る",articles_path %>
    <%= form_for @article  do |f| %>

        <% #titleはデータベースと関係している %>
        <%= f.file_field :image ,id: "blog" %><br>
        <%= f.text_field :title ,:size => "49" %> <br>
        <% #textと言うデータベースのカラム名 %>
        <%= f.text_area :text %> <br>
        <% #submitは入力されたデータを引き連れてformタグに指定したページへ飛ぶためのボタン %>
        <%= f.submit %>
    <% end %>